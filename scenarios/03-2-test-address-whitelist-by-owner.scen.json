{
  "name": "Test the address whitelist by owner",
  "steps": [
    {
      "step": "externalSteps",
      "path": "01-init.scen.json"
    },
    {
      "step": "scCall",
      "tx": {
        "from": "address:owner",
        "to": "sc:lunar-pay",
        "function": "whitelistAddress",
        "value": "0",
        "arguments": [
          "address:business-1"
        ],
        "gasPrice": "0",
        "gasLimit": "10,000,000"
      },
      "expect": {
        "status": "4",
        "message": "str:This address is already whitelisted"
      }
    },
    {
      "step": "checkState",
      "accounts": {
        "sc:lunar-pay": {
          "esdt": "*",
          "storage": {
            "str:whitelisted_addresses.len": "2",
            "str:whitelisted_addresses.item|u32:1": "address:business-1",
            "str:whitelisted_addresses.item|u32:2": "address:business-2",
            "+": ""
          },
          "code": "file:../output/lunar-pay.wasm"
        },
        "+": ""
      }
    },
    {
      "step": "scCall",
      "tx": {
        "from": "address:owner",
        "to": "sc:lunar-pay",
        "function": "whitelistAddress",
        "value": "0",
        "arguments": [
          "address:business-3"
        ],
        "gasPrice": "0",
        "gasLimit": "10,000,000"
      },
      "expect": {
        "status": "0"
      }
    },
    {
      "step": "checkState",
      "accounts": {
        "sc:lunar-pay": {
          "esdt": "*",
          "storage": {
            "str:whitelisted_addresses.len": "3",
            "str:whitelisted_addresses.item|u32:1": "address:business-1",
            "str:whitelisted_addresses.item|u32:2": "address:business-2",
            "str:whitelisted_addresses.item|u32:3": "address:business-3",
            "+": ""
          },
          "code": "file:../output/lunar-pay.wasm"
        },
        "+": ""
      }
    }
  ]
}
